spring.application.name=mcpclient

# 로깅 설정 (디버깅용)
logging.level.com.example.mcpclient=DEBUG
logging.level.org.springframework.boot.context.properties=DEBUG

# Gemini API 설정
# 방법 1: API Key 사용 (개발/로컬) - 이 방법을 사용하려면 아래 주석을 해제하고 방법 2를 주석 처리하세요
# spring.ai.google.genai.api-key={your-api-key}
# spring.ai.google.genai.chat.options.model=gemini-2.5-flash

# 방법 2: Vertex AI 사용 (credentials.json 필요) (운영/보안) - 현재 활성화됨
spring.ai.vertex.ai.gemini.project-id={your-project-id}
spring.ai.vertex.ai.gemini.location=us-central1
spring.ai.vertex.ai.gemini.chat.options.model=gemini-2.5-flash
spring.ai.vertex.ai.gemini.credentials.location=classpath:credentials.json
