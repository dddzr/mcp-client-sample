# MCP 서버 등록 설정 - stdio MCP 서버 샘플
# MCP 서버 실행 명령어 (Java 실행)
mcp.servers.mcp-server-sample.command=java

# 실행 인자 (jar 파일 경로와 stdio 모드 옵션)
mcp.servers.mcp-server-sample.args[0]=-jar
mcp.servers.mcp-server-sample.args[1]=C:\Users\User\Documents\projects\mcp-server-sample\target\mcp-server-sample-0.0.1-SNAPSHOT.jar
mcp.servers.mcp-server-sample.args[2]=--mcp-stdio

# 작업 디렉토리 (프로젝트 루트)
mcp.servers.mcp-server-sample.cwd=C:\Users\User\Documents\projects\mcp-server-sample

# URL은 stdio 모드에서는 사용하지 않습니다 (주석 처리)
# mcp.servers.mcp-server-sample.url=...

# 환경 변수 (포털 API URL 설정 - 선택사항)
mcp.servers.mcp-server-sample.env.PORTAL_API_BASE_URL=http://localhost:8081/api/portal

# Headers는 stdio 모드에서는 사용하지 않습니다 (주석 처리)
# mcp.servers.mcp-server-sample.headers.Authorization=...